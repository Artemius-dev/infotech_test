<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.myapplication.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_citiesDetailFragment"
            app:destination="@id/citiesDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/citiesDetailFragment"
        android:name="com.example.myapplication.ui.CitiesDetailFragment"
        android:label="CitiesDetailFragment"
        tools:layout="@layout/cities_detail_fragment">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="lat"
            app:argType= "string"/>
        <argument
            android:name="lon"
            app:argType="string" />
    </fragment>
</navigation>